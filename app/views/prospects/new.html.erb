<%= form_for @prospect do |f| %>
<div class="formfields">
  <%= f.label :name %>
  <%= f.text_field :name %>
 </div>
<div class="formfields">
  <%= f.label :phone %>
  <%= f.text_field :phone %>
 </div>
<div class="formfields">
  <%= f.label :email %>
  <%= f.text_field :email %>
 </div>
<div class="formfields">
  <%= f.label :inquiry %>
  <%= f.text_area :inquiry, size: "60x12" %>
 </div>
 <div class="submit">
  <%= f.submit "Submit", id: 'submit' %>
 </div>
<% end %>